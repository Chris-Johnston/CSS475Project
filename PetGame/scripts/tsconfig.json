{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "none",
    "alwaysStrict": true,
    "allowUnreachableCode": false
  },
    // explicitly set all of the files that we wish to include,
    // instead of just excluding directories
    //"exclude": [
    //    "node_modules",
    //    "wwwroot"
    //],
    "files": [
      "./login.ts",
      "./pet.ts",
      "./petDebugger.ts",
      "./petStatus.ts"
    ],
  "compileOnSave": true
}
