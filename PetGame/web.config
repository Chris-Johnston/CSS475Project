<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <system.webServer>
    <handlers>
      <remove name="aspNetCore"/>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModule" resourceType="Unspecified"/>
    </handlers>
    <aspNetCore processPath="%LAUNCHER_PATH%" arguments="%LAUNCHER_ARGS%" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" />
    <httpErrors defaultResponseMode="File" defaultPath="Error.html">
      <clear />
      <error statusCode="400" path="wwwroot/400.html"/>
      <error statusCode="404" path="wwwroot/404.html"/>
      <error statusCode="500" path="wwwroot/500.html"/>
    </httpErrors>
  </system.webServer>
</configuration>